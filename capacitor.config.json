{
  "appId": "com.placesearch.smartalgo",
  "appName": "Places Search",
  "webDir": "public",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "http",
    "hostname": "localhost",
    "iosScheme": "capacitor"
  },
  "android": {
    "buildOptions": {
      "keystorePath": "android/app/release.keystore",
      "keystoreAlias": "places-search",
      "releaseType": "APK"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#667eea",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "CapacitorNodeJS": {
      "nodeDir": "nodejs"
    }
  }
}
